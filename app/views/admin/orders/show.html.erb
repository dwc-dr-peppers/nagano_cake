<div class="container">
	<div class="row">
		<div class="col-3">
			<h4>注文履歴詳細</h4>
		</div>
	</div>
	<div class="row">
		<div class="col-lg-offset-1 col-lg-6">
			<div class="row"><span class="orders">購入者</span>   　<%=link_to @order.customer.family_name, admin_customer_path(@order.customer) %><%=link_to @order.customer.first_name, admin_customer_path(@order.customer) %></div>
			<div class="row"><span class="orders">注文日</span>   　<%= l @order.created_at, format: :short %></div>
			<div class="row"><span class="orders">配送先</span>   　〒<%= @order.postcode %>　<%= @order.address %></div>
			<div class="row"><span class="orders"></span>　　　　    <%= @order.shipping_name %></div>
			<div class="row"><span class="orders">支払方法</span>    　<%= @order.payment_way %></div>
			<div class="row"><span class="orders">注文ステータス</span>
			<%= form_with model:@order, url: admin_order_path(@order) do |f|%>
			<%= f.select :status, Order.statuses_i18n.keys.map{|k| [I18n.t("enums.order.status.#{k}"), k]} %>
				<%= f.submit '更新',class: 'btn btn-primary' %>
			<% end %></div>
		</div>
	</div>
<div class="spase_admin"></div>
	<div class="row">
	<div class="col-7">
	<table class="table">
	<tr class="active">
		<th>商品名</th>
		<th>単価（税込）</th>
		<th>数量</th>
		<th>小計</th>
		<th>製作ステータス</th>
	</tr>
		<% @order_items.each do |order_item| %>
			<tr>
				<td><%= order_item.item.name %></td>
				<td><%= order_item.item.with_tax_price.to_s(:delimited) %></td>
				<td><%= order_item.quantitiy %></td>
				<td><%= order_item.item.with_tax_price * order_item.quantitiy %></td>
				<td>
					<%= form_with model:order_item, url: admin_order_detail_path(order_item) do |f|%>
					<%= f.select :make_status, OrderDetail.make_statuses_i18n.keys.map{|k| [I18n.t("enums.order_detail.make_status.#{k}"), k]} %>
						<%= f.submit '更新',class: 'btn btn-primary' %>
						<% end %>
						<% @total_amount += order_item.item.with_tax_price * order_item.quantitiy %>
				</td>
			</tr>
		<% end %>
	</table>
	</div>
	<div class="col-1"></div>
<div class="col-4">
<dl class="dl-horizontal orders">
	<dt>商品合計</dt>  <dd><%=  @total_amount.to_s(:delimited) %>円</dd>
	<dt>送料</dt>  <dd><%= @postage %>円</dd>
	<dt>請求合計金額</dt>  <dd><%=  @total_amount + @postage %>円</dd>

</dl>
</div>
</div>
</div>
