<h4><span class="text-black bg-light"><%= @customer.full_name %>さんの会員詳細</span></h4>

<div class="container">
  <table>
     <tr>
      <th>会員ID</th>
        <td><%= @customer.id %></td>
    </tr>
    <tr>
      <th>氏名</th>
        <td><%= @customer.family_name %><%= @customer.first_name %></td>
    </tr>
    <tr>
      <th>カナ</th>
        <td><%= @customer.family_name_kana %><%= @customer.first_name_kana %></td>
    </tr>
    <tr>
      <th>郵便番号</th>
        <td><%= @customer.postcode %></td>
    </tr>
    <tr>
      <th>住所</th>
        <td><%= @customer.address %></td>
    </tr>
    <tr>
      <th>電話番号</th>
        <td><%= @customer.telephone_number %></td>
    </tr>
    <tr>
      <th>メールアドレス</th>
        <td><%= @customer.email %></td>
    </tr>
    <tr>
      <th>ステータス</th>
        <td><%= @customer.is_deleted? ? '退会' : '有効' %></td>
    </tr>
  </table>
  <p>
    <%= link_to '編集する', edit_admin_customer_path(@customer), class: "btn btn-sm btn-success" %>
    <%= link_to '注文履歴一覧を見る', shipping_addresses_path, class: "btn btn-primary btn-sm col-sm-" %>
  </p>
</div>