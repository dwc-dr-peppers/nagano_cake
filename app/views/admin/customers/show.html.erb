<div class="container mx-5">
  <div class="row col-12 my-4">
<h4><span class="text-black bg-light"><%= @customer.full_name %>さんの会員詳細</span></h4>
  </div>
</div>

<div class="container mx-5">
  <table class="table table-borderless">
     <tr>
      <th style="width: 18%">会員ID</th>
        <td><%= @customer.id %></td>
    </tr>
    <tr>
      <th>氏名</th>
        <td><%= @customer.full_name %></td>
    </tr>
    <tr>
      <th>カナ</th>
        <td><%= @customer.full_name_kana %></td>
    </tr>
    <tr>
      <th>郵便番号</th>
        <td><%= @customer.postcode %></td>
    </tr>
    <tr>
      <th>住所</th>
        <td style="width: 50%"><%= @customer.address %></td>
    </tr>
    <tr>
      <th>電話番号</th>
        <td><%= @customer.telephone_number %></td>
    </tr>
    <tr>
      <th>メールアドレス</th>
        <td><%= @customer.email %></td>
    </tr>
    <tr>
      <th>会員ステータス</th>
      <% if @customer.is_deleted ==false %>
      <td class="text-success font-weight-bold">有効</td>
      <% else %>
      <td class="test-secondary font-weight-bold">退会</td>
      <% end %>
    </tr>
    <tr>
      <th></th>
      <td style="width: 15%"><%= link_to '編集する', edit_admin_customer_path(@customer), class: "btn btn-sm btn-success px-3" %>
      <%= link_to '注文履歴一覧を見る', shipping_addresses_path, class: "btn btn-primary btn-sm col-sm-3 ml-5 " %></td>
    </tr>
  </table>
</div>