<h3>会員一覧</h3>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-8">
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
        <% @customer.each do |customer| %>
          <tr>
            <td><%= customer.id %></td>
            <td><%= customer.family_name %><%= customer.first_name %></td>
            <td><%= customer.email %></td>
            <td><%= customer.is_deleted? ? '退会' : '有効' %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>