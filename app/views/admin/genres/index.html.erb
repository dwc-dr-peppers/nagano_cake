<h4>ジャンル一覧・追加</h4>

<div class="form-group">
  <%= form_with model:@genre, url: '/admin/genres', method: :post do |f| %>
    <%= f.label "ジャンル名" %>
    <%= f.text_field :name, placeholder: "ジャンル名" %>
    <%= f.submit "新規登録", class: 'btn btn-success' %>
  <% end %>
</div>

<P>ジャンル</P>
<% @genres.each do |genre| %>
<span><%= genre.name %>
  <%= link_to '編集', edit_admin_genre_path(genre.id), class: "btn btn-sm btn-success" %>
</span>
<% end %>