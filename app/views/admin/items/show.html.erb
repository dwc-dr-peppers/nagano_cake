<div class="container">

  <div class="row my-5 ml-5">
    <div class="ml-5 row col-12">
      <div class="col-6 text-center">
        <% if @item.image.attached? %>
          <%= image_tag @item.image, size: "300x200" %>
        <% else %>
          <%= image_tag 'no-image', size: "300x200" %>
        <% end %>
      </div>

      <div class="col-6">
        <table>
          <tr>
            <th>商品名</th>
            <td class="col-6"><%= @item.name %></td>
          </tr>
          <tr>
            <th>商品説明</th>
            <td class="col-6"><%= @item.introduction %></td>
          </tr>
          <tr>
            <th>ジャンル</th>
            <td class="col-6"><%= @item.genre.name %></td>
          </tr>
          <tr>
            <th>税込価格<br>(税抜価格)</th>
            <td class="col-6"><%= @item.price.to_s(:delimited) %> (<%= (@item.price * 1.1 ).floor.to_s(:delimited) %>) 円</td>
          </tr>
          <tr>
            <th>販売ステータス</th>
            <% if @item.is_sale ==true %>
              <td class="text-success font-weight-bold col-6">販売中</td>
            <% else %>
              <td class="text-secondary col-6">販売停止中</td>
            <% end %>
          </tr>
        </table>


          <div class="text-center my-3 col-6">
            <%= link_to "編集する", edit_admin_item_path(@item), class:"btn btn-success" %>
          </div>

      </div>
    </div>
   </div>
</div>


