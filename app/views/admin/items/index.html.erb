<div class="container">
  <div class="row my-3">
    <h4 class="col-10 mt-2">商品一覧</h4>
    <%= link_to new_admin_item_path, class:"col-2 text-reset" do %>
      <i class="fas fa-plus-circle fa-3x ml-auto mt-3"></i>
    <% end %>
  </div>
  <div>
    <table class="col-12">
      <thead class="table table-secondary">
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
      </thead>

      <tbody class="table table-borderless">
        <% @items.each do |item| %>
        <tr>
          <td><%= item.id %></td>
          <td>
            <%= link_to admin_item_path(item), class:"text-dark" do %>
              <%= item.name %>
            <% end %>
          </td>
          <td><%= item.price.to_s(:delimited) %></td>
          <td><%= item.genre.name %></td>
          <% if item.is_sale ==true %>
            <td class="text-success font-weight-bold">販売中</td>
          <% else %>
            <td class="text-secondary">販売停止中</td>
          <% end %>
        </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @items %>
　</div>
</div>
