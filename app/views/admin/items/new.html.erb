<div class="container">
  <h4>商品新規登録</h4>
    <div class="mx-auto">
      <%= form_with model: @item, url: admin_items_path do |f| %>
        <div class="form-group row">
          <%= f.label :image, "商品画像", class:"col-form-label col-sm-2" %>
            <%= f.file_field :image, accept: "*/image" %>
        </div>
        <div class="form-group row">
          <%= f.label :name, "商品名", class:"col-form-label col-sm-2" %>
            <%= f.text_field :name %>
        </div>
        <div class="form-group row">
          <%= f.label :introduction, "商品説明", class:"col-form-label col-sm-2" %>
            <%= f.text_area :introduction %>
        </div>
        <div class="form-group row">
          <%= f.label :genre_id, "ジャンル", class:"col-form-label col-sm-2" %>
            <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name) %>
        </div>
        <div class="form-group row">
          <%= f.label :price, "税抜価格", class:"col-form-label col-sm-2" %>
            <%= f.text_field :price %>
        </div>
        <div class="form-group row">
          <%= f.label :is_sale, "販売ステータス", class:"col-form-label col-sm-2" %>
            <%= f.radio_button :is_sale, "true" %>
            <%= f.label :is_sale, "販売中" %>
            <%= f.radio_button :is_sale, "false" %>
            <%= f.label :is_sale, "販売停止中" %>
        </div>
          <%= f.submit '新規登録' %>
      <% end %>
    </div>
  </div>
</div>

