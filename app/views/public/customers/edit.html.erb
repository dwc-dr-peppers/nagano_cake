<div class="container mx-7">
  <div class="row my-4">
    <h4><span class="text-black bg-light">会員情報編集</span></h4>
  </div>
</div>
  
<div class="container mx-5">
  <div class="col-12">
<%= form_with model: @customer, url: customers_information_path(@customer), method: :patch do |f| %>

  <div class="form-group">
  <%= f.label :"氏名", class: "col-sm-2 control-label" %>
  <%= f.text_field :family_name, class: "mr-5" %>
  <%= f.text_field :first_name %>
  </div> 
  <div class="form-group">
  <%= f.label :"フリガナ", class: "col-sm-2 control-label" %>
  <%= f.text_field :family_name_kana, class: "mr-5" %>
  <%= f.text_field :first_name_kana %>
  </div>
  <div class="form-group">
  <%= f.label :"郵便番号", class: "col-sm-2 control-label" %>
  <%= f.text_field :postcode %>
  </div>
  <div class="form-group">
  <%= f.label :"住所", class: "col-sm-2 control-label" %>
  <%= f.text_field :address, class: "col-sm-7 px-0" %>
  </div>
  <div class="form-group">
  <%= f.label :"電話番号", class: "col-sm-2 control-label" %>
  <%= f.text_field :telephone_number %>
  </div>
  <div class="form-group">
  <%= f.label :"メールアドレス", class: "col-sm-2 control-label" %>
  <%= f.text_field :email %>
  </div>
  <div class="form-group">
  <%= f.label :"　", class: "col-sm-2 control-label" %>
  <%= f.submit "変更内容を保存する",class: 'btn btn-success btn-md col-sm-3' %>
  <%= link_to '退会する', customers_unsubscribe_path, class: "btn btn-danger btn-md col-sm-2 ml-5" %>
  </div>
<% end %>
  </div>
</div>

