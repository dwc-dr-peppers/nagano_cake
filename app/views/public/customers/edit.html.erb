<h1>会員情報編集</h1>

<%= form_with model: @customer, url: customer_path(@customer), method: :patch do |f| %>

  <div class="form-group">
  <%= f.label :"氏名", class: "col-sm-2 control-label" %>
  <%= f.text_field :family_name %>
  <%= f.text_field :first_name %>
  </div>
  <div class="form-group">
  <%= f.label :"フリガナ", class: "col-sm-2 control-label" %>
  <%= f.text_field :family_name_kana %>
  <%= f.text_field :first_name_kana %>
  </div>
  <div class="form-group">
  <%= f.label :"郵便番号", class: "col-sm-2 control-label" %>
  <%= f.text_field :postcode %>
  </div>
  <div class="form-group">
  <%= f.label :"住所", class: "col-sm-2 control-label" %>
  <%= f.text_field :address %>
  </div>
  <div class="form-group">
  <%= f.label :"電話番号", class: "col-sm-2 control-label" %>
  <%= f.text_field :telephone_number %>
  </div>
  <div class="form-group">
  <%= f.label :"メールアドレス", class: "col-sm-2 control-label" %>
  <%= f.text_field :email %>
  </div>
  <div class="form-group">
  <%= f.submit "変更内容を保存する",class: 'btn btn-success btn-md col-sm-2' %>
  <%= link_to '退会する', customers_unsubscribe_path, class: "btn btn-danger btn-md col-sm-" %>
  </div>
<% end %>
