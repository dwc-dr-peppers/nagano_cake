<h5>マイページ</h5>

<p>登録情報
  <%= link_to '編集する', customers_information_edit_path(@customer), class: "btn btn-sm btn-success" %>
</p>
<div class='col-7'>
  <table class="table table-bordered">
    <tr>
      <th>氏名</th>
        <td><%= @customer.family_name %><%= @customer.first_name %></td>
    </tr>
    <tr>
      <th>カナ</th>
        <td><%= @customer.family_name_kana %><%= @customer.first_name_kana %></td>
    </tr>
    <tr>
      <th>郵便番号</th>
        <td><%= @customer.postcode %></td>
    </tr>
    <tr>
      <th>住所</th>
        <td><%= @customer.address %></td>
    </tr>
    <tr>
      <th>電話番号</th>
        <td><%= @customer.telephone_number %></td>
    </tr>
    <tr>
      <th>メールアドレス</th>
        <td><%= @customer.email %></td>
    </tr>
  </table>
</div>