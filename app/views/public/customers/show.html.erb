  <div class="container mx-8">
    <div class="row my-4">
      <h4><span class="text-black bg-light px-3 ">マイページ</span></h4>
    </div>
  </div>

<div class="container mx-3">
  <div class="col-7">
    <h5><strong>登録情報</strong>
      <%= link_to '編集する', customers_information_edit_path(@customer), class: "btn btn-md btn-success ml-3" %>
    </h5>

  <table class="table table-bordered">
    <tr>
      <th style="width: 25%", class="bg-light">氏名</th>
        <td><%= @customer.family_name %><%= @customer.first_name %></td>
    </tr>
    <tr>
      <th class="bg-light">カナ</th>
        <td><%= @customer.family_name_kana %><%= @customer.first_name_kana %></td>
    </tr>
    <tr>
      <th class="bg-light">郵便番号</th>
        <td><%= @customer.postcode %></td>
    </tr>
    <tr>
      <th class="bg-light">住所</th>
        <td><%= @customer.address %></td>
    </tr>
    <tr>
      <th class="bg-light">電話番号</th>
        <td><%= @customer.telephone_number %></td>
    </tr>
    <tr>
      <th class="bg-light">メールアドレス</th>
        <td><%= @customer.email %></td>
    </tr>
  </table>

    <h5><strong>配送先　</strong>
      <%= link_to '一覧を見る', shipping_addresses_path, class: "btn btn-primary btn-md px-4 ml-3" %>
    </h5>

    <h5><strong>注文履歴</strong>
      <%= link_to '一覧を見る', orders_path, class: "btn btn-primary btn-md px-4 ml-3" %>
    </h5>
 </div>
</div>