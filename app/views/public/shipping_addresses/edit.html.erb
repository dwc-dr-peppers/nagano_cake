<div class="container">

  <div class="row row-col-9">
    <div class="col-1"></div>
    <h4 class="col">配送先編集</h4>
  </div>

  <div>
    <%= form_with model: @shipping_address, url: shipping_addresses_path do |f| %>
      <div class="row row-cols-12 from-group">
        <div class="col-3"><%= f.label "郵便番号(ハイフンなし)", class:"form-label" %></div>
        <div class="col-3"><%= f.text_field :postcode %></div>
        <div class="col-3"></div>
        <div class="col-3"></div>
      </div>

      <div class="row row-cols-12 from-group">
        <div class="col-3"><%= f.label "住所", class:"form-label" %></div>
        <div class="col-7"><%= f.text_field :address, class:"col-12" %></div>
        <div class="col-1"></div>
        <div class="col-1"></div>
      </div>

      <div class="row row-cols-12 from-group">
        <div class="col-3"><%= f.label "宛名", class:"form-label" %></div>
        <div class="col-3"><%= f.text_field :name %></div>
        <div class="col-4"></div>
        <div class="col-2"><%= f.submit '新規登録', class:"col-12 btn btn-success" %></div>
      </div>
    <% end %>
  </div>

</div>