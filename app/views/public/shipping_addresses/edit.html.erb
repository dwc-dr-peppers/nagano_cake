<div class="container">

  <div class="row">
    <h2>配送先編集</h2>
  </div>

  <div>
    <%= form_with model: @shipping_address, url: shipping_addresses_path do |f| %>
      <div class="from-group">
        <%= f.label "郵便番号(ハイフンなし)" %>
        <%= f.text_field :postcode %>
      </div>

      <div class="from-group">
        <%= f.label "住所" %>
        <%= f.text_field :address %>
      </div>

      <div class="from-group">
        <%= f.label "宛名" %>
        <%= f.text_field :name %>
        <%= f.submit '新規登録', class:"btn btn-success" %>
      </div>
    <% end %>
  </div>

</div>