<div class="container">

  <div class="row">
    <h4 class="col">配送先登録/一覧</h4>
  </div>

  <div>

    <div>
      <%= form_with model: ShippingAddress.new, url: shipping_addresses_path do |f| %>
        <div>
          <div class="from-group">
            <%= f.label "郵便番号(ハイフンなし)", class:"col-3 form-label" %>
            <%= f.text_field :postcode, class:"col-3" %>
          </div>

          <div class="from-group">
            <%= f.label "住所", class:"col-3 form-label" %>
            <%= f.text_field :address, class:"col-sm-6" %>
          </div>

          <div class="from-group">
            <%= f.label "宛名", class:"col-3 form-label" %>
            <%= f.text_field :name, class:"col-3" %>
            <p class="col-3"></p>
            <%= f.submit '新規登録', class:"btn btn-success col-3" %>
          </div>
        </div>
      <% end %>
    </div>

    <div class="row">
      <table class="table-secondary table-bordered">
        <thead>
          <tr>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th></th>
          </tr>
        </thead>

        <!--% @shipping_addresses.each do |shipping_address| %>
