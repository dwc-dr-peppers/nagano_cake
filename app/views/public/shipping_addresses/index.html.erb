<div class="container n-auto">

  <div class="row my-3 row-col-9">
    <div class="col-1"></div>
    <h4 class="col">配送先登録/一覧</h4>
  </div>

  <div class="my-4 mx-5">
    <%= form_with model: ShippingAddress.new, url: shipping_addresses_path, method: :post do |f| %>
      <%= f.hidden_field :customer_id, :value => current_customer.id %>
      <div class="row row-cols-12 from-group mb-1">
        <div class="col-3"><%= f.label "郵便番号(ハイフンなし)", class:"form-label" %></div>
        <div class="col-3"><%= f.text_field :postcode, placeholder: '0000000' %></div>
        <div class="col-3"></div>
        <div class="col-3"></div>
      </div>

      <div class="row row-cols-12 from-group mb-1">
        <div class="col-3"><%= f.label "住所", class:"form-label" %></div>
        <div class="col-7"><%= f.text_field :address, placeholder: '東京都渋谷区神園町0-0', size: 60 %></div>
        <div class="col-1"></div>
        <div class="col-1"></div>
      </div>

      <div class="row row-cols-12 from-group">
        <div class="col-3"><%= f.label "宛名", class:"form-label" %></div>
        <div class="col-3"><%= f.text_field :name, placeholder: '令和道子' %></div>
        <div class="col-3"></div>
        <div class="col-3"><%= f.submit '新規登録', class:"btn btn-success px-5" %></div>
      </div>
    <% end %>
  </div>

      <div class="col-9">
        <table class="table table-bordered">
          <thead class="table table-secondary">
            <tr>
              <th style="width: 12%">郵便番号</th>
              <th style="width: 35%">住所</th>
              <th style="width: 18%">宛名</th>
              <th colspan="1" style="width: 35%"></th>
            </tr>
          </thead>

          <% @shipping_addresses.each do |shipping_address| %>
            <tbody class="table table-bordered">
              <tr>
                <td><%= shipping_address.postcode %></td>
                <td><%= shipping_address.address %></td>
                <td><%= shipping_address.name %></td>
                <td>
                  <%= link_to "編集する", edit_shipping_address_path(shipping_address.id), class:"btn btn-success" %>
                  <%= link_to "削除する", shipping_address_path(shipping_address.id), method: :delete, class:"btn btn-danger" %>
                </td>
              </tr>
            </tbody>
          <% end %>
        </table>
      </div>
      <div class="col-3"></div>
  </div>
</div>
