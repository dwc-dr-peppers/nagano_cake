<div class="container">

  <div class="row">
    <h2>配送先登録/一覧</h2>
    <%= from_with model: ShippingAddress.new do |f| %>
      <div class="from-group">
        <%= f.label "郵便番号(ハイフンなし)" %>
        <%= f.text_field :postcode %>
      </div>

      <div class="from-group">
        <%= f.label "住所" %>
        <%= f.text_field :address %>
      </div>

      <div class="from-group">
        <%= f.label "宛名" %>
        <%= f.text_field :name %>
      </div>

      <div class="form-group">
        <%= f.submit '新規登録', class:"btn btn-success" %>
      </div>
    <% end %>
  </div>

  <div class="row">
    <table>
      <thead>
        <tr>
          <th>郵便番号</th>
          <th>住所</th>
          <th>宛名</th>
          <th></th>
        </tr>
      </thead>

      <% current_customer.each do |shipping_address| %>
        <tbody>
          <tr>
            <th><%= shipping_address.postcode %></th>
            <th><%= shipping_address.address %></th>
            <th><%= shipping_address.name %></th>
            <th>
              <%= link_to "edit", class:"btn btn-success" %>
              <%= link_to "destroy", class:"btn btn-danger" %>
            </th>
          </tr>
        </tbody>
      <% end %>
    </table>

  </div>
</div>
