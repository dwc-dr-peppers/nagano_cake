            <tr>
              <th>%= shipping_address.postcode %></th>
              <th>%= shipping_address.address %></th>
              <th>%= shipping_address.name %></th>
              <th>
                %= link_to "編集する", edit_shipping_address_path(current_customer.shipping_address.id), class:"btn btn-success" %>
                %= link_to "削除する", shipping_address_path(current_customer.shipping_address.id),　method: :delete, class:"btn btn-danger" %>
              </th>
            </tr>
          </tbody>
        % end %-->
      </table>
    </div>
  </div>
</div>
