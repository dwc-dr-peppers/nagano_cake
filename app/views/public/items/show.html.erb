<div class="container">
  <div class="row my-5">

    <div class="col-3">
      <h5>ジャンル検索</h5>
      <%= form_with model: @genre, class: 'boards__searchForm' do %>
        <% @genres.each do |genre| %>
        <div class="tag-box">
            <%= link_to genre.name, items_path(name: genre.id) %>
          </div>
        <% end %>
          <div class="tag-box">
            <%= link_to "全ての商品", items_path %>
          </div>
      <% end %>
    </div>

    <div class="col-9 d-flex">
        <% if @item.image.attached? %>
          <%= image_tag @item.image, size: "300x200" %>
        <% else %>
          <%= image_tag 'no-image', size: "300x200" %>
        <% end %>

      <div class="ml-5">
        <h3><%= @item.name %></h3>
        <p><%= @item.introduction %></p>
        <h5 class="mt-5">¥ <%= (@item.price * 1.1 ).floor.to_s(:delimited) %><small class="text-muted">(税込)</small></h5>

        <p><%= alert %></p>

        <% if @item.is_sale == false  %>
          <h5>販売停止中です</h5>
        <% else %>
            <% if customer_signed_in? %>
              <div class="my-4 px-2">
                <%= form_with model: @cart_item, url: cart_items_path do |f| %>
                  <%= f.hidden_field :item_id, :value => @item.id %>
                  <%= f.hidden_field :customer_id, :value => current_customer.id %>
                  <%= f.select :quantitiy, *[1..10] %>
                  <%= f.submit 'カートに入れる', class:"btn btn-success ml-5" %>
                <% end %>
              </div>
            <% end %>
         <% end %>
      </div>

    </div>
 </div>
</div>




