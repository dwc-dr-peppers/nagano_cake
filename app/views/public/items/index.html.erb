<div class="container">
  <div class="row my-5">
    <div class="col-3">
      <p>ジャンル検索</p>
    </div>

    <div class="col-9">
      <div>
        <h3>商品一覧<small class="text-muted">(全<%= @item_count %>件)</small></h3>
      </div>
      <div class="d-flex flex-wrap">
        <% @items.each do |item| %>
        <div class="m-3">
            <% if item.image.attached? %>
              <%= link_to item_path(item) do %>
                <%= image_tag item.image, size: "200x140"%>
              <% end %>
            <% else %>
              <%= link_to item_path(item) do %>
                <%= image_tag 'no-image', size: "200x140"%>
              <% end %>
            <% end %>
            <p class="mt-2"><%= item.name %></p>
            <p>¥ <%= item.price.to_s(:delimited) %></p>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
