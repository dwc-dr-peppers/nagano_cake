<div class="container">
  <div class="row my-5">

      <div class="col-3">
        <h5>ジャンル検索</h5>
        <%= form_with model: @genre, class: 'boards__searchForm' do %>
          <% @genres.each do |genre| %>
            <div class="tag-box">
              <%= link_to genre.name, items_path(name: genre.id) %>
            </div>
          <% end %>
            <div class="tag-box">
              <%= link_to "全ての商品", items_path %>
            </div>
        <% end %>
      </div>



    <div class="col-9">
      <div>
        <h3><strong><%= @index_name %>一覧</strong><small class="text-muted">(全<%= @item_count %>件)</small></h3>
      </div>
      <div class="d-flex flex-wrap">
        <% @items.each do |item| %>
          <div class="m-3">
            <% if item.is_sale == false %>
                <% if item.image.attached? %>
                  <%= link_to item_path(item) do %>
                    <div class="not-sale">
                      <%= image_tag item.image, size: "200x140", class:"not-sale-img"%>
                      <p>販売停止中です</p>
                    </div>
                  <% end %>
                <% else %>
                  <%= link_to item_path(item) do %>
                    <div class="not-sale">
                      <%= image_tag 'no-image', size: "200x140", class:"not-sale-img" %>
                      <p>販売停止中です</p>
                    </div>
                  <% end %>
                <% end %>
            <% else %>
                <% if item.image.attached? %>
                  <%= link_to item_path(item) do %>
                    <%= image_tag item.image, size: "200x140"%>
                  <% end %>
                <% else %>
                  <%= link_to item_path(item) do %>
                    <%= image_tag 'no-image', size: "200x140" %>
                  <% end %>
                <% end %>
            <% end %>
            <p class="mt-2"><%= item.name %></p>
            <p>¥ <%= item.price.to_s(:delimited) %></p>
          </div>
        <% end %>
      </div>
      <%= paginate @items %>
    </div>
  </div>
</div>
