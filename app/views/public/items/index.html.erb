<div class="container-fluid">
  <div class="row my-5 mx-0">

      <div class="col-2">
        <%= render 'public/shared/genre_search', genres: @genres, genre: @genre %>
      </div>



    <div class="col-10">
      <div>
        <h3><strong><%= @index_name %>一覧</strong><small class="text-muted">(全<%= @item_count %>件)</small></h3>
      </div>
      <div class="d-flex flex-wrap">
        <% @items.each do |item| %>
          <div class="m-3">
            <% if item.is_sale == false %>
                <% if item.image.attached? %>
                  <%= link_to item_path(item) do %>
                    <div class="not-sale">
                      <%= image_tag item.image, size: "200x140", class:"not-sale-img"%>
                      <p>販売停止中です</p>
                    </div>
                  <% end %>
                <% else %>
                  <%= link_to item_path(item) do %>
                    <div class="not-sale">
                      <%= image_tag 'no-image', size: "200x140", class:"not-sale-img" %>
                      <p>販売停止中です</p>
                    </div>
                  <% end %>
                <% end %>
            <% else %>
                <% if item.image.attached? %>
                  <%= link_to item_path(item) do %>
                    <%= image_tag item.image, size: "200x140"%>
                  <% end %>
                <% else %>
                  <%= link_to item_path(item) do %>
                    <%= image_tag 'no-image', size: "200x140" %>
                  <% end %>
                <% end %>
            <% end %>
            <p class="mt-2"><%= item.name %></p>
            <p>¥ <%= item.with_tax_price.to_s(:delimited) %></p>
          </div>
        <% end %>
      </div>
      <%= paginate @items %>
    </div>
  </div>
</div>
