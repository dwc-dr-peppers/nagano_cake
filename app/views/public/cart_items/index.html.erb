<h3>ショッピングカート</h3>

<%= link_to 'カートを空にする', destroy_all_cart_items_path, method: :delete %>

<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @cart_items.each do |cart_item| %>
      <tr>
        <td><%= cart_item.item.name %></td>
        <td><%= cart_item.item.with_tax_price %></td>
        <td>
          <%= form_with model: cart_item, url: cart_items_path do |f| %>
            <%= f.select :quantitiy, options_from_collection_for_select(CartItem.find(params[:id]), :quantitiy, :quantitiy) %>
          <% end %>
          <%= cart_item.quantitiy %>
        </td>
        <td><%= cart_item.subtotal %></td>
        <td><%= link_to '削除する', cart_item_path(cart_item), method: :delete %></td>
        <% @total_amount += cart_item.subtotal %>
      </tr>
     <% end %>
  </tbody>

</table>


<table>
  <tr>
    <th>合計金額</th>
    <td><%= @total_amount %></td>
  </tr>
</table>