<div>
  <h4>注文履歴一覧</h4>
  <div>
    <table eclass="table table-bordered">
      <thead class="table table-secondary">
        <tr>
          <td>注文日</td>
          <td>配送先</td>
          <td>注文商品</td>
          <td>支払金額</td>
          <td>ステータス</td>
          <td>注文詳細</td>
        </tr>
      </thead>
      
      <%= @orders.each do |order| %>
      <tbody eclass="table table-bordered">
        <tr>
          <td></td>
          <td>
            <h6>〒 order.postcode</h6>
            <h6>order.address</h6>
            <h6>order.shipping_name</h6>
          </td>
          <%= order.item.each do |item| %>
          <td>
            <h6>item.name</h6>
          </td>
          <% end %>
          <td>order.total_amount</td>
          <td>order.status</td>
          <td><%= link_to '表示する', url: order_path(order.id), class:"btn btn-primary" %>></td>
        </tr>
      </tbody>
      <% end %>
      
    </table>
  </div>
</div>