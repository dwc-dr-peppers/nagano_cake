<div class="container">
  <div class="row">
    <div class="col-1"></div>
    <h4 class="col">注文履歴一覧</h4>
  </div>
</div>

<div>
  <table class="container table table-bordered border-dark">
    <thead class="table table-secondary">
      <tr>
        <td class="col-1">注文日</td>
        <td class="col-4">配送先</td>
        <td class="col-2">注文商品</td>
        <td class="col-auto">支払金額</td>
        <td class="col-auto">ステータス</td>
        <td class="col-auto">注文詳細</td>
      </tr>
    </thead>

    <tbody class="container table table-bordered border-dark">
    <% @orders.each do |order| %>
      <tr class="container">
        <td class="col-1"><%= l order.created_at, format: :short %></td>
        <td class="col-4">
          <h6>〒 <%= order.postcode %></h6>
          <h6><%= order.address %></h6>
          <h6><%= order.shipping_name %></h6>
        </td>
        <td class="col-2">
          <% order.order_details.each do |detail| %>
            <h6><%= detail.item.name %></h6>
          <% end %>
        </td>
        <td class="col-auto"><strong><%= order.total_amount.to_s(:delimited) %>円</strong></td>
        <td class="col-auto"><strong><%= order.status_i18n %></strong></td>
        <td class="col-auto"><%= link_to '表示する', order_path(order.id), class:"btn btn-primary" %></td>
      </tr>
    <% end %>
    </tbody>

  </table>
</div>
