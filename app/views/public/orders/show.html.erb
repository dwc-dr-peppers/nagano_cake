<div>

  <h4>注文履歴詳細</h4>

  <div>
    <strong>注文情報</strong>
    <table class="table table-bordered">
      <tbody>
        <tr>
          <td class="table table-secondary">注文日</td>
          <td></td>
        </tr>
        <tr>
          <td class="table table-secondary">配送先</td>
          <td>
            <%#= 〒 @order.shipping_address.postcode %>
            <%#= @order.shipping_address %>
            <%#= @order.shipping_address.name %>
          </td>
        </tr>
        <tr>
          <td class="table table-secondary">支払方法</td>
          <td><%#= @order.payment_way %></td>
        </tr>
        <tr>
          <td class="table table-secondary">ステータス</td>
          <td><%#= @order.status %></td>
        </tr>
      </tbody>
    </table>
  </div>

  <div>
    <strong>請求情報</strong>
    <table class="table table-bordered">
      <tbody>
        <tr>
          <td class="table table-secondary">商品合計</td>
          <td><%#= @order %></td>
        </tr>
        <tr>
          <td class="table table-secondary">配送料</td>
          <td><%#= @order.postage %></td>
        </tr>
        <tr>
          <td class="table table-secondary">ご請求額</td>
          <td><%#= @order.total_amount %></td>
        </tr>
      </tbody>
    </table>
  </div>

  <div>
    <strong>注文内容</strong>
    <table class="table table-bordered">
      <thead class="table table-secondary">
        <tr>
          <td>商品</td>
          <td>単価(税込)</td>
          <td>個数</td>
          <td>小計</td>
        </tr>
      </thead>

      <%#= @order.item.each do |item| %>
      <tbody>
        <tr>
          <td><%#= item.name %></td>
          <td><%#= item.price %></td>
          <td><%#= item.quantitiy %></td>
          <td></td>
        </tr>
      </tbody>
      <%# end %>
    </table>
  </div>
</div>