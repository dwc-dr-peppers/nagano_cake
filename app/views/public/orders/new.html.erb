<div class="container">
  <h4>注文情報入力</h4>

  <%= form_with model: Order.new, url: orders_confirm_path, method: :post do |f| %>
    <div class="container">
      <strong>支払方法</strong>
      <div class="row">
        <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
        <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %>
      </div>
      <div class="row">
        <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
        <%= f.label :payment_method, Order.payment_methods_i18n[:transfer]%>
      </div>
    </div>

    <div  class="container">
      <strong>お届け先</strong>
      <div class="row">
        <%= f.radio_button :address_id, "ご自身の住所" %>
        <%= f.label current_customer.address %>
      </div>
      <div class="row">
        <%= f.radio_button :address_id, "登録済住所から選択" %>
        <%= f.select :address_id, options_from_collection_for_select(ShippingAddress.all, :id, :address_display) %>
      </div>
      <div class="row">
        <%= f.radio_button :address_id, "新しいお届け先" %>

        <%#= form_with model: ShippingAddress.new, url: shipping_addresses_path, method: :post do |f| %>
          <%= f.hidden_field :customer_id, :value => current_customer.id %>
          <div class="row row-cols-12 from-group">
            <div class="col-3"><%= f.label "郵便番号(ハイフンなし)", class:"form-label" %></div>
            <div class="col-3"><%= f.text_field :postcode %></div>
            <div class="col-3"></div>
            <div class="col-3"></div>
          </div>

          <div class="row row-cols-12 from-group">
            <div class="col-3"><%= f.label "住所", class:"form-label" %></div>
            <div class="col-7"><%= f.text_field :address, class:"col-12" %></div>
            <div class="col-1"></div>
            <div class="col-1"></div>
          </div>

          <div class="row row-cols-12 from-group">
            <div class="col-3"><%= f.label "宛名", class:"form-label" %></div>
            <div class="col-3"><%= f.text_field :name %></div>
            <div class="col-3"></div>
            <div class="col-3"></div>
          </div>
        <%# end %>

      </div>
    </div>
    <%= f.submit "確認画面へ進む", class:"btn btn-primary" %>
  <% end %>
</div>