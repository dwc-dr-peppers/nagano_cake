<div class="container">
  <h4>注文情報入力</h4>

  <%= form_with model: @order, url: orders_confirm_path, method: :post do |f| %>
    <div class="container">
      <strong>支払方法</strong>
      <div class="container">
        <div class="row">
          <div>
            <%= f.radio_button :payment_way, Order.payment_ways.key(0), required: true %>
            <%= f.label :payment_way, Order.payment_ways_i18n[:credit_card] %>
          </div>
        </div>
        <div class="row">
          <div>
            <%= f.radio_button :payment_way, Order.payment_ways.key(1), required: true %>
            <%= f.label :payment_way, Order.payment_ways_i18n[:transfer]%>
          </div>
        </div>
      </div>
    </div>

    <div  class="container">
      <strong>お届け先</strong>
      <div class="container">
        <%= f.radio_button :address_select, 1, required: true %>
        <%= f.label :address_id, "ご自身の住所" %>
        <%= "〒" %>
        <%= current_customer.postcode %>
        <%= current_customer.address %>
        <%= current_customer.family_name + " " + current_customer.first_name %>
      </div>
      <div class="container">
        <%= f.radio_button :address_select, 2, required: true %>
        <%= f.label :address_id, "登録済住所から選択" %>
        <%= f.select :address_id, options_from_collection_for_select(@shipping_addresses, :id, :address_display) %>
      </div>
      <div class="container">
        <%= f.radio_button :address_select, 3, required: true %>
        <%= f.label :address_id, "新しいお届け先" %>
        <div class="row form-group">
          <%= f.label "郵便番号(ハイフンなし)", class:"col-form-label" %>
          <%= f.text_field :postcode, class:"form-control-sm" %>
        </div>
        </br>
        <div class="row">
          <%= f.label "住所", class:"col-form-label" %>
          <%= f.text_field :address, class:"form-control-sm" %>
        </div>
        </br>
        <div class="row">
          <%= f.label "宛名", class:"col-form-label" %>
          <%= f.text_field :shipping_name, class:"form-control-sm" %>
        </div>
      </div>
    </div>
    <%= f.submit "確認画面へ進む", class:"btn btn-primary" %>
  <% end %>
</div>